<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../layouts/head') %>

    <title>Document</title>
</head>
<body>
    <main>
        <nav>
            <h1>Best Books!</h1>
          </nav>
          <div class="sub-title">
              <h3>Your Search Results <% searchResults.forEach(item => { %></h3>
          </div>

          <ul>
            <div class="book-item">
                <li>
                    <img class="book-img-small" src="<%=item.image_url%>">
                    </li>
                    <li class="book-title"><%= item.title %></li>
                    <li class="book-author"><%= item.authors %></li>
                    <li class="book-description"><%= item.description %></li>
                    <button id="update-button" type="submit">Add to Collection</button>
            </div>
                
                <form id="create-form" action="/searches" method="post">
                  <input type="text" name="title" placeholder="<%= item.title %>" required>
                  <input type="text" name="author" placeholder="<%= item.authors %>" required>
                  <input type="text" name="ISBN" placeholder="<%= item.ISBN %>" required>
                  <input type="text" name="imageURL" placeholder="<%= item.image_url %>" required>
                  <input id=form-description type="text" name="description" placeholder="<%= item.description %>" required>
                  <input type="text" name="bookshelf" placeholder="Enter a bookshelf name" required>
      
                  <button class="button" type="submit">Update Details</button>
                </form>
              <% }) %>
        
            </ul>

    <!-- </main> -->
    <%- include('../../layouts/footer') %>
</body>
</html>